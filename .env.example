# アプリケーション設定
NEXT_PUBLIC_APP_NAME="Windows Manus"
NEXT_PUBLIC_APP_DESCRIPTION="Windows環境で動作するManus AIクローン"
NEXT_PUBLIC_APP_VERSION="0.1.0"

# データベース設定
DATABASE_URL="file:./dev.db"

# Ollama設定
NEXT_PUBLIC_OLLAMA_HOST="http://localhost:11434"
NEXT_PUBLIC_DEFAULT_MODEL="llama3"

# サンドボックス設定
NEXT_PUBLIC_SANDBOX_ENABLED=true
NEXT_PUBLIC_SANDBOX_TIMEOUT=60000

# セキュリティ設定
NEXT_PUBLIC_API_KEY=""  # 本番環境では必ず設定してください

# ブラウザ自動化設定
NEXT_PUBLIC_BROWSER_AUTOMATION_ENABLED=true
NEXT_PUBLIC_BROWSER_TIMEOUT=30000

# VSCode連携設定
NEXT_PUBLIC_VSCODE_INTEGRATION_ENABLED=true

# ファイルシステム設定
NEXT_PUBLIC_FILE_SYSTEM_ROOT="./data"
NEXT_PUBLIC_MAX_UPLOAD_SIZE=10485760  # 10MB

# マルチモーダル設定
NEXT_PUBLIC_MULTIMODAL_ENABLED=true
NEXT_PUBLIC_IMAGE_FORMATS="jpg,jpeg,png,gif,webp"
NEXT_PUBLIC_AUDIO_FORMATS="mp3,wav,ogg"
NEXT_PUBLIC_DOCUMENT_FORMATS="pdf,docx,txt,md"

# ログ設定
NEXT_PUBLIC_LOG_LEVEL="info"  # debug, info, warn, error
